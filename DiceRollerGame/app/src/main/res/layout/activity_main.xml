<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@id/linear_layout_dices"
              android:id="@+id/txt_user"
              android:textSize="30sp"
              android:textColor="@color/darkGreen"
              android:textStyle="bold"
              android:textAlignment="center"
    />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/txt_user"
                  app:layout_constraintBottom_toTopOf="@id/button_roll"

                  android:id="@+id/linear_layout_dices"
                  android:orientation="horizontal"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
    >
        <include layout="@layout/layout_dice"
                 android:id="@+id/layout_first_dice"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"/>

        <include layout="@layout/layout_dice"
                 android:id="@+id/layout_second_dice"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"/>
    </LinearLayout>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/button_roll"
            app:layout_constraintTop_toBottomOf="@id/linear_layout_dices"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_alignBottom="@id/linear_layout_dices"
            android:text="@string/roll"
    />

    <ProgressBar android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:layout_constraintTop_toBottomOf="@id/button_roll"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:id="@+id/progress_bar"
                 style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                 android:max="100"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:id="@+id/txt_result"
              android:visibility="gone"
              android:textStyle="bold"
              android:textColor="@color/darkGreen"
              android:textAlignment="center"
              android:gravity="center"
    />

</android.support.constraint.ConstraintLayout>